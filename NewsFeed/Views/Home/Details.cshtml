@using Application.ViewModels;
@model FeedDTO
@{

    ViewData["Title"] = Model?.Title;

}



<section class="py-5">
    <div class="container">
        <div class="row gx-5">
            <aside class="col-lg-6">
                <div class=" rounded-4 mb-3 d-flex justify-content-center">
                    <a data-fslightbox="mygalley" class="rounded-4 " target="_blank" data-type="image" style="aspect-ratio:3/2.7" href="@Model?.ImageUrl">
                        <img style="max-width: 100%; max-height: 100%; margin: auto; height:100%; " class="rounded-4 fill" src="@Model?.ImageUrl" />
                    </a>
                </div>

                <!-- thumbs-wrap.// -->
                <!-- gallery-wrap .end// -->
            </aside>
            <main class="col-lg-6">
                <div class="ps-lg-3">
                    <h4 class="title text-dark">
                        @Model?.Title
                    </h4>
                    <div class="d-flex flex-row my-3">

                        <span class="text-muted text-dark">@_localization.Getkey("date"): <i class="fas fa-shopping-basket fa-sm mx-1"></i>@Model?.PublishedAt</span>
                    </div>
                    <div class="d-flex flex-row my-3">
                        @if(Model?.Author != null)
                        {
                            <span class="text-muted text-dark">@_localization.Getkey("author"): <i class="fas fa-shopping-basket fa-sm mx-1"></i>@Model?.Author</span>

                        }
                    </div>
                    <hr />

               

                    <p >
                        @Model?.Description
                    </p>



                </div>
            </main>
        </div>
    </div>
</section>
